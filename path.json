{
  "img":{
    "src":
    [
      "/path/to/directory/*.png",
      "/path/to/directory/*.jpg",
      "/path/to/directory/*.gif"
    ],
    "destination": "/path/to/directory/"
  },

  "css":{
    "src": [
      "/path/to/directory/styles.css"
    ],
    "destination": "/path/to/directory/"
  },

  "js":{
    "src": [
      "/path/to/directory/app.js"
    ],
    "destination": "/path/to/directory/"
  },

  "html":{
    "src": ["/path/to/directory/*.html"],
    "destination": "/path/to/directory/"
  }
}